<%= link_to "発注一覧", purchases_path %>

<h1>ユーザー一覧</h1>
<table>
  <tr>
    <th>id</th>
    <th>メールアドレス</th>
    <th>発注数</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td><%= user.purchases.length %></td>
    <td><%= link_to '詳細', admin_user_path(user.id) %></td>
    <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
    <td><%= link_to "削除", admin_user_path(user.id), method: :delete, data: { confirm: '削除しますか？'} %></td>
  </tr>
<% end %>
</table>
